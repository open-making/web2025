{
	"name": "gallery",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"screenshot": "node scripts/screenshot.js",
		"fetch-metadata": "node scripts/fetch-metadata.js",
		"download-images": "node scripts/download-images.js",
		"screenshot:hey-jude": "pnpm fetch-metadata https://github.com/open-making/web2025-hey-jude/issues/1 hey-jude --filter netlify && pnpm screenshot --metadata src/lib/data/hey-jude-metadata.json --output-dir src/lib/assets/images/hey-jude $(cat hey-jude.txt | tr '\\n' ' ')",
		"screenshot:short-stories": "pnpm fetch-metadata https://github.com/open-making/web2025-short-stories/issues short-stories --filter netlify && pnpm screenshot --metadata src/lib/data/short-stories-metadata.json --output-dir src/lib/assets/images/short-stories $(cat short-stories.txt | tr '\\n' ' ')",
		"screenshot:web2025": "pnpm fetch-metadata https://github.com/open-making/web2025/issues web2025 --filter netlify && pnpm screenshot --metadata src/lib/data/web2025-metadata.json --output-dir src/lib/assets/images/web2025 $(cat web2025.txt | tr '\\n' ' ')"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@internationalized/date": "^3.8.1",
		"@lucide/svelte": "^0.515.0",
		"@sveltejs/adapter-netlify": "^5.1.0",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/vite": "^4.0.0",
		"bits-ui": "^2.8.6",
		"clsx": "^2.1.1",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"lucide-svelte": "^0.539.0",
		"marked": "^16.1.2",
		"mdsvex": "^0.12.3",
		"playwright": "^1.54.2",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"sharp": "^0.34.3",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^2.1.0",
		"tailwindcss": "^4.0.0",
		"tw-animate-css": "^1.3.6",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^7.0.4"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	},
	"dependencies": {
		"@fontsource/atkinson-hyperlegible": "^5.2.6",
		"@iconify/svelte": "^5.0.1",
		"@resvg/resvg-js": "^2.6.2",
		"d3": "^7.9.0",
		"dotenv": "^17.2.1",
		"octokit": "^5.0.3",
		"satori": "^0.16.2",
		"satori-html": "^0.3.2",
		"svelteplot": "^0.3.8"
	},
	"meta": {
		"baseURL": "https://web2025-gallery.netlify.app",
		"analyticsID": "PLAUSIBLE-ANALYTICS-ID"
	}
}
